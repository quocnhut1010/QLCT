<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/headerbkg"
    android:orientation="vertical"
    android:layout_gravity="center">
    <!-- Số dư ví MoMo và các mục liên quan -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="628dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="63dp"
        android:background="@drawable/draw_cricle"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Loại giao dịch"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinnerloaigd"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_item"
            android:hint="Chọn loại giao dịch" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Tên"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinnerten"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_item"
            android:hint="Chọn tên giao dịch" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Tổng Tiền"
            android:textSize="20sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/draw_cricle"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày"
            android:textSize="20sp" />
        <!--chọn ngày-->
        <EditText
            android:id="@+id/edtNgay"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/draw_cricle"
            android:clickable="true"
            android:ems="10"
            android:focusable="false"
            android:hint="dd/mm/nn"
            android:inputType="none"
            android:textAlignment="center"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ghi Chú !"
            android:textSize="20sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/draw_cricle"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/teal"
            android:minHeight="48dp"
            android:text="Thêm"
            android:textColor="@color/white"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>


</RelativeLayout>
